<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="KevinRosero_ExamenFinal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:KevinRosero_ExamenFinal.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home">
            <ShellContent
                Title="Home Page Perros"
                ContentTemplate="{DataTemplate local:HomeView}"
                Route="Home Page Perros" 
        />
        </Tab>
        <Tab Title="Lista de Perritos">
            <ShellContent
                Title="Perros List Page"
                ContentTemplate="{DataTemplate local:PerroListPage}"
                Route="Perros List Page" 
            />
        </Tab>
        <Tab Title="Ingresar Nuevo">
            <ShellContent
                Title="Perros Item Page"
                ContentTemplate="{DataTemplate local:PerroItemPage}"
                Route="Perros Item Page" 
            />
        </Tab>
    </TabBar>

    




</Shell>
